{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.9.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "connection-string": "AccountEndpoint=https://nosql-static-webapp-1.documents.azure.com:443/;AccountKey=gd7RI5dlzABytXgwjqIn5eqXzM68xLWvdIXdCyx2dyCDWHuNBGzZlOsn79jZR7rVxE8EXeRhp3xIACDb6XFDDg==",
    "options": {
      "database": "db-static-web-app-1",
